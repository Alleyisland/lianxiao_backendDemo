<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lianxiao.demo.simpleserver.dao.AdDao">
    <resultMap id="AdMap" type="com.lianxiao.demo.simpleserver.model.Ad">
        <id column="aid" jdbcType="BIGINT" property="aid" />
        <result column="gid" jdbcType="BIGINT" property="gid" />
        <result column="word" jdbcType="VARCHAR" property="word" />
    </resultMap>

    <select id="selectAll"  resultMap="AdMap">
        SELECT * FROM ad
    </select>

</mapper>